<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <!--筛选栏-->
    <LinearLayout
        android:id="@+id/ll_stay_visit_selsect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_bg"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/margin_10dp"
        android:orientation="horizontal">

        <!--筛选综合排序-->
        <LinearLayout
            android:id="@+id/ll_synthesize_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <CheckBox
                android:id="@+id/cb_synthesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/seletor_stock_arrow"
                android:gravity="center"
                android:text="综合排序"
                android:textColor="@drawable/selector_text_stock"
                android:textSize="15sp"/>
        </LinearLayout>
        <!--筛选金额-->
        <LinearLayout
            android:id="@+id/ll_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <CheckBox
                android:id="@+id/cb_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/seletor_stock_arrow"
                android:gravity="center"
                android:text="金额"
                android:textColor="@drawable/selector_text_stock"
                android:textSize="15sp"/>
        </LinearLayout>
        <!--筛选底价-->
        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <CheckBox
                android:id="@+id/cb_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/seletor_stock_arrow"
                android:gravity="center"
                android:text="底价"
                android:textColor="@drawable/selector_text_stock"
                android:textSize="15sp"/>
        </LinearLayout>
        <!--筛选-->
        <LinearLayout
            android:id="@+id/ll_shaixuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <CheckBox
                android:id="@+id/cb_shaixuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/seletor_stock_arrow"
                android:gravity="center"
                android:text="筛选"
                android:textColor="@drawable/selector_text_stock"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
