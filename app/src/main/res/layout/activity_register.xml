<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_excite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/exit_image"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_regest"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="23dp"/>


    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zhongjin_logo"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shadow_bg"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/iv_persion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:paddingTop="50dp"
            android:src="@drawable/user_image" />

        <EditText
            android:id="@+id/et_putphone_emial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_password_lock"
            android:layout_alignLeft="@+id/et_getet"
            android:layout_alignStart="@+id/et_getet"
            android:background="@null"
            android:hint="@string/register_phone_or_email"
            android:textColorHint="#cccccc"
            android:singleLine="true"
            android:textSize="20dp" />
        <ImageView
            android:id="@+id/iv_password_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/iv_persion"
            android:src="@drawable/password_lock_iamge"
            android:layout_marginTop="60dp"/>
        <EditText
            android:id="@+id/put_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/iv_password_lock"
            android:hint="@string/register_put_password"
            android:textColorHint = "#cccccc"
            android:background="@null"
            android:layout_below="@+id/et_putphone_emial"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            android:singleLine="true"
            />
        <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/iv_password_lock"
            android:src="@drawable/msg_image"
            android:layout_marginTop="60dp"/>
        <EditText
            android:id="@+id/et_getet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_toEndOf="@+id/iv_persion"
            android:layout_toRightOf="@+id/iv_msg"
            android:hint="@string/find_password_msgcode"
            android:textColorHint = "@color/gray"
            android:background="@null"
            android:layout_below="@+id/put_et_password"
            android:textSize="20dp"
            android:layout_marginTop="58dp"
            android:layout_alignBaseline="@+id/iv_msg"
            />
        <Button
            android:id="@+id/buttion_getMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/et_getet"
            android:layout_marginRight="65dp"
            android:background="@null"
            android:textColor="@color/blue"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button_login"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:layout_below="@+id/buttion_getMsg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="@drawable/login_button_background"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:textColor="@color/gray"
            android:textSize="20dp"/>

    </RelativeLayout>



</LinearLayout>
