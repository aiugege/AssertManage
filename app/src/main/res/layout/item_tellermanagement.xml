<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/margin_20dp"
    android:layout_marginRight="@dimen/margin_20dp"
    android:layout_marginTop="@dimen/margin_20dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_80dp"
        android:paddingRight="@dimen/margin_50dp"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="@color/dark"
        android:textSize="@dimen/font_size_32px" />

    <TextView
        android:id="@+id/tv_tell_type"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:layout_marginLeft="-130dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_toRightOf="@+id/tv_tell_name"
        android:background="@drawable/teller_small_write"
        android:gravity="center"
        android:text=""
        android:textColor="@color/yello"
        android:textSize="@dimen/font_size_20px" />

    <ImageView
        android:id="@+id/tv_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:padding="@dimen/margin_5dp"
        android:background="@drawable/tenner_tanhao" />

    <TextView
        android:id="@+id/tv_tell_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/tv_statue"
        android:layout_centerVertical="true"
        android:text="正常"
        android:textSize="@dimen/font_size_28px" />
</RelativeLayout>
