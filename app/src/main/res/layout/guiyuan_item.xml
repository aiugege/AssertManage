<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/jurisdiction_setting"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/margin_30dp"
            >

            <TextView
                android:id="@+id/iv_guanliyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="10dp"
                android:paddingLeft="@dimen/margin_20dp"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/tv_guanliyuan"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@drawable/jurisdiction_small_write"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_toRightOf="@+id/iv_guanliyuan"
                android:text="管理员"
                android:textColor="@color/yello"
                android:gravity="center"
                android:textSize="10dp"
                />

            <TextView
                android:id="@+id/et_putphone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_30dp"
                android:text="时间"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                android:paddingRight="25dp"
                />
            <TextView
                android:id="@+id/iv_password_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iv_guanliyuan"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingTop="30dp"
                android:textSize="20dp"
                android:text="@string/tv_phone"/>

            />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30dp"
                android:text="注销"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bt_delete"
                android:layout_below="@+id/et_putphone_name"
                android:layout_marginRight="@dimen/margin_30dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_delete"
                android:layout_marginRight="150dp"
                android:layout_marginTop="75dp"
                android:text="锁定"
                android:gravity="center"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>



</LinearLayout>
