<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_bg_gray"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_150dp"
                android:background="@drawable/home_banner"
                android:visibility="gone" />

            <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/home_banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:banner_default_image="@drawable/home_banner" />
            <!--数据开始-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="-6dp"
                android:layout_marginLeft="-6dp"
                android:background="@drawable/home_bor_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_tv_name_libor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/home_libor"
                        android:textSize="@dimen/font_size_28px"
                        android:textColor="@color/home_gray_text" />

                    <TextView
                        android:id="@+id/home_tv_text_libor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:text="2.53"
                        android:textSize="@dimen/font_size_32px"
                        android:textColor="@color/home_libor_text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_5dp"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_tv_name_shibor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/home_shibro"
                        android:textSize="@dimen/font_size_28px"
                        android:textColor="@color/home_gray_text" />

                    <TextView
                        android:id="@+id/home_tv_text_shibor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:singleLine="true"
                        android:text="2.36"
                        android:textSize="@dimen/font_size_32px"
                        android:textColor="@color/home_shibor_text" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/margin_5dp"

                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_tv_name_hibor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/home_hibor"
                        android:textSize="@dimen/font_size_28px"
                        android:textColor="@color/home_gray_text" />

                    <TextView
                        android:id="@+id/home_tv_text_hibor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/margin_2dp"
                        android:singleLine="true"
                        android:text="3.25"
                        android:textSize="@dimen/font_size_32px"
                        android:textColor="@color/home_hibor_text" />
                </LinearLayout>
            </LinearLayout>
            <!--数据结束-->
            <!-- 产品领域开始 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_product_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textSize="@dimen/font_size_32px"
                    android:textColor="@color/home_dark_text"
                    android:text="@string/home_text_product" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/home_product_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:textColor="@color/home_hibor_text"
                        android:textSize="@dimen/font_size_32px"
                        android:text="@string/lable_forfaiting"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_20dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_tv_name_forfaiting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_size_24px"
                            android:text="@string/home_text_detail_forfaiting"
                            android:textColor="@color/home_gray_text"/>

                        <ImageView
                            android:id="@+id/home_iv_name_forfaiting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_5dp"
                            android:layout_marginBottom="@dimen/margin_12dp"
                            android:layout_weight="1.9"
                            android:src="@drawable/home_forfaiting"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/home_product_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:textColor="@color/home_libor_text"
                        android:textSize="@dimen/font_size_32px"
                        android:text="@string/lable_facotring"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_20dp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_tv_name_shibor1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_size_24px"
                            android:text="@string/home_text_detail_factoring"
                            android:textColor="@color/home_gray_text" />

                        <ImageView
                            android:id="@+id/home_iv_name_factoring"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_10dp"
                            android:layout_weight="1.9"
                            android:src="@drawable/home_factoring"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <!-- 产品领域结束 -->

            <!--专业服务开始 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_service_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textSize="@dimen/font_size_32px"
                    android:textColor="@color/home_dark_text"
                    android:text="@string/home_text_service" />
            </LinearLayout>


            <!--专业服务结束 -->

            <!--专业服务开始-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@drawable/home_service_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark"
                        android:gravity="center"
                        android:textSize="@dimen/font_size_28px"
                        android:text="@string/home_text_send"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:text="@string/home_text_detail_send"
                            android:textSize="@dimen/font_size_24px"
                            android:textColor="@color/home_gray_text" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:src="@drawable/home_assetx_send"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:layout_marginBottom="@dimen/margin_15dp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/font_size_28px"
                        android:text="@string/home_text_search"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:textSize="@dimen/font_size_24px"
                            android:text="@string/home_text_detail_search"
                            android:textColor="@color/home_gray_text" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:src="@drawable/home_assetx_search"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginBottom="@dimen/margin_15dp"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/font_size_28px"
                        android:text="@string/home_text_deal"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:textSize="@dimen/font_size_24px"
                            android:text="@string/home_text_detail_deal"
                            android:textColor="@color/home_gray_text" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_15dp"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:src="@drawable/home_assetx_deal"/>
                </LinearLayout>

            </LinearLayout>
            <!--专业服务结束-->
            <!--品牌优势开始 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_pinpai_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textSize="@dimen/font_size_32px"
                    android:textColor="@color/home_dark_text"
                    android:text="@string/home_advantage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:background="@drawable/shadow_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_15dp"
                android:paddingTop="@dimen/margin_20dp">

                <LinearLayout
                    android:id="@+id/home_rl_cydia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/home_iv_cydia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_marginRight="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_2dp"
                            android:src="@drawable/home_assetx_sealf" />
                        <TextView
                            android:id="@+id/home_tv_cydia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_safe" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/home_tv_cydia_common"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:gravity="right"
                        android:text="@string/home_safe_detail"
                        android:textColor="@color/home_gray_text"
                        android:textSize="@dimen/font_size_24px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_rl_informationopen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_22dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/home_iv_informationopen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_marginRight="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_2dp"
                            android:src="@drawable/home_assetx_quick" />
                        <TextView
                            android:id="@+id/home_tv_informationopen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_deal" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/home_tv_informationopen_common"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:text="@string/home_deal_detail"
                        android:gravity="right"
                        android:textColor="@color/home_gray_text"
                        android:textSize="@dimen/font_size_24px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_rl_dealfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_22dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/home_iv_dealfast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_marginRight="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_2dp"
                            android:src="@drawable/home_assetx_open" />
                        <TextView
                            android:id="@+id/home_tv_dealfast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_message" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/home_tv_dealfast_common"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:text="@string/home_message_detail"
                        android:gravity="right"
                        android:textColor="@color/home_gray_text"
                        android:textSize="@dimen/font_size_24px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_rl_security"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_22dp"
                    android:layout_marginBottom="@dimen/margin_5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/home_iv_security"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_marginRight="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_2dp"
                            android:src="@drawable/home_assetx_profession" />
                        <TextView
                            android:id="@+id/home_tv_security"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_manager" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/home_tv_security_common"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:text="@string/home_manager_detail"
                        android:gravity="right"
                        android:textColor="@color/home_gray_text"
                        android:textSize="@dimen/font_size_24px" />
                </LinearLayout>
            </LinearLayout>
            <!--品牌优势结束 -->

        </LinearLayout>

    </ScrollView>

</LinearLayout>
