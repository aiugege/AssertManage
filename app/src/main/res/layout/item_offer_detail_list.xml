<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:orientation="horizontal"
        android:background="@drawable/shadow_bg">

<!--
        <RadioButton
            android:id="@+id/item_forfaiting_detail_offer_list_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@null"
            android:enabled="false"
            android:background="@drawable/radio_group_selector"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:visibility="gone"/>-->
        <ImageView
            android:id="@+id/item_forfaiting_detail_offer_list_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:background="@drawable/down_jiantou"/>
        <LinearLayout
            android:id="@+id/item_forfaiting_detail_offer_list_ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/item_forfaiting_detail_offer_list_im"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_forfaiting_detail_offer_list_companyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****银行股份有限公司"
                android:layout_marginLeft="@dimen/margin_15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_forfaiting_detail_offer_list_datelable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报价时间：" />

                <TextView
                    android:id="@+id/item_forfaiting_detail_offer_list_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-03-20 10:00"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_forfaiting_detail_offer_list_ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_forfaiting_detail_offer_list_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yello"
                    android:text="3.9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yello"
                    android:text="%" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贴现率"
                android:visibility="gone"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
