<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/margin_15dp"
    android:layout_marginRight="@dimen/margin_15dp"
    android:layout_marginTop="@dimen/margin_15dp"
    android:background="@drawable/shadow_bg1"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tell_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_60dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:text=""
            android:textColor="@color/dark"
            android:textSize="@dimen/font_size_32px" />

        <TextView
            android:id="@+id/tv_tell_type"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:layout_marginLeft="-55dp"
            android:layout_marginTop="@dimen/margin_18dp"
            android:layout_toRightOf="@+id/tv_tell_name"
            android:background="@drawable/teller_small_write"
            android:gravity="center"
            android:text="管理员"
            android:textColor="@color/yello"
            android:textSize="@dimen/font_size_20px" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_qukuanlian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp">

        <TextView
            android:id="@+id/tv_qukuailian_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_tellermanager_qukuailian"
            android:textSize="@dimen/font_size_28px" />

        <TextView
            android:id="@+id/tv_qukuanlian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/tv_qukuailian_book"
            android:textSize="@dimen/font_size_28px"
            android:textColor="@color/common_text_gray"
            android:singleLine="false"
            android:text="" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_bg_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_qukuanlian"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/market_forfaiting_detail_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_bg_line"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tv_create_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_permmision_create"
            android:textColor="@color/home_gray_text"
            android:textSize="@dimen/font_size_26px" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textColor="@color/home_gray_text"
            android:text=""
            android:textSize="@dimen/font_size_26px" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_bg_line"
        android:layout_marginTop="@dimen/margin_15dp">

        <TextView
            android:id="@+id/bt_lock"
            android:layout_width="@dimen/margin_60dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_toLeftOf="@+id/wite_off"
            android:background="@drawable/cansal_image"
            android:gravity="center"
            android:textColor="@color/common_text_gray"
            android:text="@string/mine_permission_lock" />

        <TextView
            android:id="@+id/wite_off"
            android:layout_width="@dimen/margin_60dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_20dp"
            android:background="@drawable/bt_delete"
            android:gravity="center"
            android:text="@string/mine_permision_zhuxiao"
            android:textColor="@color/blue" />
    </RelativeLayout>
</RelativeLayout>
