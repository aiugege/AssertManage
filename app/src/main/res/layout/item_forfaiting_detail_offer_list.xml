<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:orientation="horizontal">

        <!--
                <RadioButton
                    android:id="@+id/item_forfaiting_detail_offer_list_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:enabled="false"
                    android:background="@drawable/radio_group_selector"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:visibility="gone"/>-->
        <ImageView
            android:id="@+id/item_forfaiting_detail_offer_list_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/item_forfaiting_detail_offer_list_ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/item_forfaiting_detail_offer_list_im"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_forfaiting_detail_offer_list_companyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_40dp"
                android:textSize="@dimen/font_size_24px"
                android:text="****银行股份有限公司" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_forfaiting_detail_offer_list_datelable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_20px"
                    android:text="@string/adapter_market_forfaiting_date" />

                <TextView
                    android:id="@+id/item_forfaiting_detail_offer_list_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_20px"
                    android:text="2018-03-20 10:00" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_forfaiting_detail_offer_list_ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginRight="@dimen/margin_10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_forfaiting_detail_offer_list_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_30px"
                    android:text="3.9"
                    android:textColor="@color/yello" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/yello" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_forfaiting_detail_offer_list_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:textSize="@dimen/font_size_20px"
                android:text="@string/market_forfaiting_detail_discount_rate" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
