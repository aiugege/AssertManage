<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/regist_new_iv_excite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:padding="@dimen/margin_5dp"
                    android:src="@drawable/exit_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:text="@string/register_new_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_36px" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/regist_iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_50dp"
                android:src="@drawable/register_cn_newlogo1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:background="@drawable/shadow_bg">


                <RelativeLayout
                    android:id="@+id/rl_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hend"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:background="@drawable/login_background_write"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/regist_new_ll_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_origition_type"
                            android:textSize="@dimen/font_size_26px" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_40dp">

                            <RelativeLayout
                                android:id="@+id/regist_new_rl_select"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/select_banck_background_write">

                                <TextView
                                    android:id="@+id/regist_new_tv_select"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/margin_10dp"
                                    android:layout_marginLeft="@dimen/margin_5dp"
                                    android:layout_marginTop="@dimen/margin_10dp"
                                    android:layout_toLeftOf="@+id/regist_new_iv_1"
                                    android:background="@null"
                                    android:maxLines="1"
                                    android:text=""
                                    android:textSize="@dimen/font_size_24px" />

                                <ImageView
                                    android:id="@+id/regist_new_iv_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="12dp"
                                    android:background="@drawable/select_instution_image" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/regist_new_rl_select1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_weight="1"
                                android:background="@drawable/select_banck_background_write">


                                <TextView
                                    android:id="@+id/regist_new_tv_select1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginBottom="@dimen/margin_10dp"
                                    android:layout_marginLeft="@dimen/margin_5dp"
                                    android:layout_marginTop="@dimen/margin_10dp"
                                    android:layout_toLeftOf="@+id/regist_new_iv_2"
                                    android:background="@null"
                                    android:maxLines="1"
                                    android:text=""
                                    android:textSize="@dimen/font_size_24px" />

                                <ImageView
                                    android:id="@+id/regist_new_iv_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/margin_5dp"
                                    android:background="@drawable/classification_image" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/regist_new_ll_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/regist_new_ll_type"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/regist_new_company_iv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="@string/regist_new_company_iv_name"
                            android:textSize="@dimen/font_size_26px" />

                        <EditText
                            android:id="@+id/regist_new_company_et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/regist_new_iv_persion"
                            android:layout_weight="1"
                            android:background="@null"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:hint="@string/register_new_hint"
                            android:maxLength="150"
                            android:singleLine="true"
                            android:textColorHint="#cccccc"
                            android:textSize="@dimen/font_size_26px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/regist_new_ll_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/regist_new_ll_company"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/regist_new_tv_person"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="@string/register_realation_name"
                            android:textSize="@dimen/font_size_26px" />

                        <EditText
                            android:id="@+id/regist_new_et_person"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:maxLength="100"
                            android:singleLine="true"
                            android:textColorHint="#cccccc"
                            android:textSize="@dimen/font_size_24px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/regist_new_ll_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/regist_new_ll_person"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/regist_new_tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="@string/mine_banck_ralative_persion"
                            android:textSize="@dimen/font_size_26px" />

                        <EditText
                            android:id="@+id/regist_new_et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLength="11"
                            android:singleLine="true"
                            android:textColorHint="#cccccc"
                            android:textSize="@dimen/font_size_24px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/regist_new_ll_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/regist_new_ll_phone"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/regist_new_tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="@string/register_qiye_email"
                            android:textSize="@dimen/font_size_26px" />

                        <EditText
                            android:id="@+id/regist_new_et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:maxLength="30"
                            android:singleLine="true"
                            android:textColorHint="#cccccc"
                            android:textSize="@dimen/font_size_26px" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/regist_new_ll_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/regist_new_ll_email"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">


                            <TextView
                                android:id="@+id/regist_new_tv_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:text="@string/register_verification_code"
                                android:textSize="@dimen/font_size_26px" />

                            <EditText
                                android:id="@+id/regist_new_et_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:maxLength="4"
                                android:paddingBottom="@dimen/margin_5dp"
                                android:paddingTop="@dimen/margin_5dp"
                                android:singleLine="true"
                                android:textColorHint="#cccccc"
                                android:textSize="@dimen/font_size_24px" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/regist_new_iv_code"
                            android:layout_width="@dimen/margin_60dp"
                            android:layout_height="@dimen/margin_30dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/home_service_icon"
                            android:textSize="@dimen/font_size_26px" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/regist_new_ll_letter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/regist_new_ll_code"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/regist_new_tv_letter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="@string/register_invite_code"
                            android:textSize="@dimen/font_size_26px" />

                        <EditText

                            android:id="@+id/regist_new_et_letter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/register_no_write_type"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:inputType="number"
                            android:textColorHint="#cccccc"
                            android:textSize="@dimen/font_size_24px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/regist_new_ll_xieyi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/regist_new_ll_letter"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/regist_new_iv_xieyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/no_select"
                            android:padding="@dimen/margin_5dp"
                            android:textSize="@dimen/font_size_26px" />

                        <TextView
                            android:id="@+id/regist_new_tv_xieyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:text="@string/register_will_agree"
                            android:textSize="@dimen/font_size_24px" />

                        <TextView
                            android:id="@+id/regist_new_tv2_xieyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_agreement"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/font_size_24px" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/regist_new_tv3_xieyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/regist_new_ll_xieyi"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:text="@string/register_agreement"
                        android:textColor="@color/blue"
                        android:visibility="gone"
                        android:textSize="@dimen/font_size_24px" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/regist_new_tv_button"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_below="@+id/rl_msg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_25dp"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_40dp"
                    android:background="@drawable/login_button_background"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_10dp"
                    android:text="@string/register_regest"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_32px" />


            </RelativeLayout>
        </LinearLayout>


    </ScrollView>

    <!-- 该部分显示在底部  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/regist_new_tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="@string/register_new_login"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_26px" />
    </LinearLayout>
</LinearLayout>

