<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:background="@drawable/shadow_bg1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/blockchain_detail_ll_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/blue"
                        android:paddingLeft="@dimen/margin_10dp"
                        android:paddingRight="@dimen/margin_10dp">

                        <TextView
                            android:id="@+id/blockchain_detail_tv_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/blockchain_number"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/blockchain_detail_tv2_number"
                        style="@style/common_text_singleline_style1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:text="101120101"
                        android:textColor="@color/blue"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/blockchain_detail_ll_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp">

                    <TextView
                        android:id="@+id/blockchain_detail_tv_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="@string/blockchain_amount"
                        android:textColor="@color/common_text_gray" />

                    <TextView
                        android:id="@+id/blockchain_detail_tv2_amount"
                        style="@style/common_text_singleline_style1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2000..00"
                        android:textColor="@color/yello" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/blockchain_detail_ll_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/blockchain_detail_tv_currency"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="@string/blockchain_currency"
                        android:textColor="@color/common_text_gray" />

                    <TextView
                        android:id="@+id/blockchain_detail_tv2_currency"
                        style="@style/common_text_singleline_style1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CNY"
                        android:textColor="@color/dark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/blockchain_detail_ll_creditnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/blockchain_detail_tv_creditnumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="@string/blockchain_creditnumber"
                        android:textColor="@color/common_text_gray" />

                    <TextView
                        android:id="@+id/blockchain_detail_tv2_creditnumber"
                        style="@style/common_text_singleline_style1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="LC20 0011LC123458"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/blockchain_detail_ll_iussingbankswift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/blockchain_detail_tv_iussingbankswift"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="@string/market_forfaiting_detail_openswiftcode"
                        android:textColor="@color/common_text_gray" />

                    <TextView
                        android:id="@+id/blockchain_detail_tv2_iussingbankswift"
                        style="@style/common_text_singleline_style1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BKCHCNBJ"
                        android:textColor="@color/dark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/blockchain_detail_ll_acceptingbankswift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/blockchain_detail_tv_acceptingbankswift"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="@string/market_forfaiting_detail_acceptswiftcode"
                        android:textColor="@color/common_text_gray" />

                    <TextView
                        android:id="@+id/blockchain_detail_tv2_acceptingbankswift"
                        style="@style/common_text_singleline_style1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BKCHCNBJ"
                        android:textColor="@color/dark" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/shadow_bg1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:orientation="vertical">
                    <!--资产发布上链-->
                    <LinearLayout
                        android:id="@+id/blockchain_detail_ll_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_30dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/blockchain_detail_ll_left_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blockchain_circle_blue" />

                        <View
                            android:layout_width="@dimen/margin_0.5dp"
                            android:layout_height="@dimen/margin_140dp"
                            android:background="@color/common_text_gray" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/blockchain_detail_issue_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_toRightOf="@+id/blockchain_detail_ll_left"
                        android:text="@string/market_forfaiting_detail_stepone"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/font_size_32px" />

                    <LinearLayout
                        android:id="@+id/blockchain_detail_ll_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/blockchain_detail_issue_tv_title"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_toRightOf="@+id/blockchain_detail_ll_left"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/blockchain_detail_issue_ll_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp">

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/blockchain_person"
                                android:textColor="@color/common_text_gray" />

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv2_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="广发银行股份有限公司"
                                android:textColor="@color/common_text_gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/blockchain_detail_issue_ll_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp">

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/blockchain_time"
                                android:textColor="@color/common_text_gray" />

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv2_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2017-10-01 12:00"
                                android:textColor="@color/common_text_gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/blockchain_detail_issue_ll_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp">

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/blockchain_id"
                                android:textColor="@color/common_text_gray" />

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv2_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HASH"
                                android:textColor="@color/common_text_gray" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <!--资产撮合成功-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/blockchain_detail_ll_left2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_30dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/blockchain_detail_ll_left2_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blockchain_circle_gray" />

                        <View
                            android:layout_width="@dimen/margin_0.5dp"
                            android:layout_height="@dimen/margin_140dp"
                            android:background="@color/common_text_gray" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/blockchain_detail_issue_tv_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_toRightOf="@+id/blockchain_detail_ll_left2"
                        android:text="@string/market_forfaiting_detail_steptwo"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/font_size_32px" />

                    <LinearLayout
                        android:id="@+id/blockchain_detail_ll_right2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/blockchain_detail_issue_tv_title2"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_toRightOf="@+id/blockchain_detail_ll_left2"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <LinearLayout
                            android:id="@+id/blockchain_detail_issue_ll_people2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp">

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv_people2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/blockchain_person"
                                android:textColor="@color/common_text_gray" />

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv2_people2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="广发银行股份有限公司"
                                android:textColor="@color/common_text_gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/blockchain_detail_issue_ll_date2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp">

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv_date2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/blockchain_time"
                                android:textColor="@color/common_text_gray" />

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv2_date2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2017-10-01 12:00"
                                android:textColor="@color/common_text_gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/blockchain_detail_issue_ll_id2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp">

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv_id2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/blockchain_id"
                                android:textColor="@color/common_text_gray" />

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv2_id2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HASH"
                                android:textColor="@color/common_text_gray" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <!--资产交易完成-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/blockchain_detail_ll_left3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_30dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/blockchain_detail_ll_left3_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blockchain_circle_gray" />

                        <View
                            android:layout_width="@dimen/margin_0.5dp"
                            android:layout_height="@dimen/margin_140dp"
                            android:background="@color/common_text_gray"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/blockchain_detail_issue_tv_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_toRightOf="@+id/blockchain_detail_ll_left3"
                        android:text="@string/market_forfaiting_detail_stepthree"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/font_size_32px" />

                    <LinearLayout
                        android:id="@+id/blockchain_detail_ll_right3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/blockchain_detail_issue_tv_title3"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_toRightOf="@+id/blockchain_detail_ll_left3"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <LinearLayout
                            android:id="@+id/blockchain_detail_issue_ll_people3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp">

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv_people3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/blockchain_person"
                                android:textColor="@color/common_text_gray" />

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv2_people3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="广发银行股份有限公司"
                                android:textColor="@color/common_text_gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/blockchain_detail_issue_ll_date3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp">

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv_date3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/blockchain_time"
                                android:textColor="@color/common_text_gray" />

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv2_date3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2017-10-01 12:00"
                                android:textColor="@color/common_text_gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/blockchain_detail_issue_ll_id3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp">

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv_id3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/blockchain_id"
                                android:textColor="@color/common_text_gray" />

                            <TextView
                                android:id="@+id/blockchain_detail_issue_tv2_id3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HASH"
                                android:textColor="@color/common_text_gray" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
