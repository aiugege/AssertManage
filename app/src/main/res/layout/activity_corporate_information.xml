<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/titlebar" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="782dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/logon_header"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_background_write">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="头像(企业LOGO)"
                    android:textColor="@color/dark"
                    android:textSize="22dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/qiyie_logo" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_background_write"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/iv_persion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="20dp"
                    android:paddingTop="30dp"
                    android:text="用户类型"
                    android:textColor="@color/dark"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/et_putphone_emial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/iv_password_lock"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="银行用户  政策银行"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/iv_password_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_persion"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="银行/公司名称"
                    android:textColor="@color/dark"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/put_et_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/et_putphone_emial"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:text="招商银行"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/iv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_password_lock"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="机构注册地址"
                    android:textColor="@color/dark"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/et_getet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_msg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="北京国贸"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/login_background_write"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/iv_persion_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="20dp"
                    android:paddingTop="30dp"
                    android:text="联系人姓名"
                    android:textColor="@color/dark"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_email"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="罗卜克"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_persion_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="邮箱"
                    android:textColor="@color/dark"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/put_et_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="10738284232qq.com"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/iv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_email"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="联系人手机号"
                    android:textColor="@color/dark"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/iv_email"
                    android:layout_alignBottom="@+id/iv_email"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="183899839"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_email"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="营业执照号"
                    android:textColor="@color/dark"
                    android:textSize="22dp" />
                <TextView
                    android:id="@+id/tv_sale_card"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_alignBaseline="@+id/sale"
                    android:layout_alignBottom="@+id/sale"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="HSJHJSAAHSKA"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_business_license_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sale"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="营业执照电子版"
                    android:textColor="@color/dark"
                    android:textSize="22dp" />
                <TextView
                    android:id="@+id/usiness_license_number"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="已上传"
                    android:gravity="center"
                    android:background="@drawable/corporate_information"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    android:layout_alignBottom="@+id/tv_business_license_number"/>
                <TextView
                    android:id="@+id/tv_business_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_business_license_number"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="机构资质信息"
                    android:textColor="@color/dark"
                    android:textSize="22dp" />
                <TextView
                    android:id="@+id/up"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="福费廷"
                    android:gravity="center"
                    android:background="@drawable/corporate_information"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    android:layout_alignBottom="@+id/tv_business_msg"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
