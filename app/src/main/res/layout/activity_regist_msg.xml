<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/iv_excite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/exit_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="@string/register_regest"
                android:textColor="@color/white"
                android:textSize="23dp" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/regist_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/register_cn_newlogo1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/login_small_write"
                android:gravity="center"
                android:text="@string/registe_select_origtion"
                android:textColor="@color/yello"
                android:textSize="@dimen/font_size_36px" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/register_line" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/login_small_write"
                android:gravity="center"
                android:text="@string/register_msg"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_36px" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="@dimen/margin_30dp"
            android:background="@drawable/regist_image">

            <LinearLayout
                android:id="@+id/hend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/body_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/body_type_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="28dp"
                    android:layout_toRightOf="@id/body_type"
                    android:text="@string/register_origition_type"
                    android:textSize="@dimen/font_size_44px" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/tv_select"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_below="@+id/hend"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/select_banck_background_write">

                <Button
                    android:id="@+id/bt_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:maxLines="1"
                    android:paddingRight="@dimen/margin_25dp"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/select_instution_image"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tv_select1"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/tv_select"
                android:layout_toRightOf="@+id/tv_select"
                android:background="@drawable/select_banck_background_write"
                android:layout_marginLeft="@dimen/margin_20dp">


                <Button
                    android:id="@+id/spinner_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:maxLines="1"
                    android:paddingRight="@dimen/margin_25dp"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/classification_image" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/tv_regist_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_select"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/regitst_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/regist_city" />

                <TextView
                    android:id="@+id/regist_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="28dp"
                    android:layout_toRightOf="@id/body_type"
                    android:text="@string/market_forfaiting_detail_arealable"
                    android:textSize="@dimen/font_size_44px" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_regon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_regist_city"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="@string/issue_forfaiting_sell_area"
                android:textSize="20dp" />

            <Button
                android:id="@+id/tv_select_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@null"
                android:textSize="20dp" />

            <Button
                android:id="@+id/tv_select_city1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_regist_city"
                android:layout_marginRight="@dimen/margin_50dp"
                android:background="@null"
                android:gravity="right|center_vertical" />

            <ImageView
                android:id="@+id/iv_jianttou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_regist_city"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/mine_jiantou" />

            <TextView
                android:id="@+id/counrty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_regon"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="@string/issue_forfaiting_sell_countrys"
                android:textSize="20dp" />

            <Button
                android:id="@+id/tv_select_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/counrty"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_select_city"
                android:layout_marginRight="@dimen/margin_50dp"
                android:background="@null"
                android:gravity="right|center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_jianttou"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:background="@drawable/mine_jiantou" />

            <TextView
                android:id="@+id/bt_find_password_next"
                android:layout_width="380dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_30dp"
                android:background="@drawable/login_button_background"
                android:gravity="center"
                android:text="@string/issue_forfaiting_sell_next"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:textSize="20dp" />


        </RelativeLayout>
    </LinearLayout>
</ScrollView>
