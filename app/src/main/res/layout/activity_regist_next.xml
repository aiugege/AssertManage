<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp">

            <ImageView
                android:id="@+id/iv_excite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/back_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="@string/register_regest"
                android:textColor="@color/white"
                android:textSize="23dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/regist_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/register_cn_newlogo1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/login_small_write"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/registe_select_origtion"
                android:textColor="@color/yello"
                android:textSize="@dimen/font_size_36px" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/msg_line_yello" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/login_small_write"
                android:gravity="center"
                android:text="@string/register_msg"
                android:singleLine="true"
                android:textColor="@color/yello"
                android:textSize="@dimen/font_size_36px" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="@dimen/margin_60dp"
            android:background="@drawable/regist_msg">

            <LinearLayout
                android:id="@+id/hend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/body_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/body_type_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="28dp"
                    android:layout_toRightOf="@id/body_type"
                    android:text="@string/origition_ziliao"
                    android:textSize="@dimen/font_size_44px" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hend"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/login_background_write"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/register_next_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/iv_persion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:text="@string/regist_new_company_iv_name"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/et_putphone_zhizhao_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/iv_persion"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:focusable="true"
                        android:hint="@string/mine_enterprise_information_number"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textColorHint="#cccccc"
                        android:textSize="18dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/iv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/register_next_ll"
                    android:paddingTop="15dp"
                    android:text="@string/mine_enterpriseinformation_adress"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/et_put_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/iv_password_lock"
                    android:layout_alignBaseline="@+id/iv_register"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint="@string/mine_enterprise_information_number"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColorHint="#cccccc"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/iv_password_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/iv_register"
                    android:paddingTop="15dp"
                    android:text="@string/register_realation_name"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/et_put_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/iv_password_lock"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="50dp"
                    android:background="@null"
                    android:hint="@string/mine_enterprise_information_number"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColorHint="#cccccc"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/iv_password_lock"
                    android:paddingTop="15dp"
                    android:text="@string/mine_banck_ralative_persion"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/et_put_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_phone"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/et_put_relative"
                    android:layout_marginLeft="50dp"
                    android:background="@null"
                    android:hint="@string/mine_enterprise_information_number"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="#cccccc"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/enterprise_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_phone"
                    android:paddingTop="15dp"
                    android:text="@string/register_qiye_email"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/et_put_enterprise_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/enterprise_email"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/et_put_number"
                    android:background="@null"
                    android:hint="@string/mine_enterprise_information_number"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColorHint="#cccccc"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_smg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/enterprise_email"
                    android:paddingTop="15dp"
                    android:text="@string/register_verification_code"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/put_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_smg"
                    android:layout_below="@+id/et_put_enterprise_email"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/iv_password_lock"
                    android:background="@null"
                    android:hint="@string/register_tu_verification"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColorHint="#cccccc"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/check_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/put_phone_number"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/enterprise_email"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/tv_invite_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_smg"
                    android:paddingTop="15dp"
                    android:text="@string/register_invite_code"
                    android:textSize="20dp" />

                <EditText

                    android:id="@+id/et_put_phone_checknumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_invite_code"
                    android:layout_alignBottom="@+id/tv_invite_code"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint="@string/register_no_write_type"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColorHint="#cccccc"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/bt_argree"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@+id/et_put_phone_checknumber"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/no_select"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_put_phone_checknumber"
                    android:layout_marginLeft="@dimen/margin_30dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/register_will_agree"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/bt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_put_phone_checknumber"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@+id/tv_agree"
                    android:text="@string/register_agreement"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/bt_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_agree"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:text="@string/register_agreement"
                    android:textColor="@color/blue"
                    android:textSize="18dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/button_find_password_next"
                android:layout_width="380dp"
                android:layout_height="55dp"
                android:layout_below="@+id/rl_msg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_20dp"
                android:background="@drawable/login_button_background"
                android:gravity="center"
                android:text="@string/register_regest"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </RelativeLayout>

    </LinearLayout>
</ScrollView>
